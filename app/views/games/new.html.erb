<h1>New Game</h1>
<% @letters.each do |letter| %>
  <div class="letter-box"><%= letter %></div>
<% end %>

<%= form_tag(score_path, method: :post, data: { turbo: false }) do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= label_tag(:suggestion, "What is the longest choice you see?") %>
  <%= text_field_tag(:suggestion) %>
  <%= submit_tag("Submit") %>
<% end %>
